@model IEnumerable<EventModel>

<h2>Events</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Event</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Location</th>
            <th>Capacity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Location</td>
            <td>@item.Capacity</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.EventId })" class="btn btn-warning">Edit</a>
                <a href="@Url.Action("Details", new { id = item.EventId })" class="btn btn-info">Details</a>
                <a href="@Url.Action("Delete", new { id = item.EventId })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
